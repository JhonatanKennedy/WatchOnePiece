{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@routes/*": ["./src/routes/*"],
      "@components/*": ["./src/components/*"],
      "@screens/*": ["./src/screens/*"],
      "@styles/*": ["./src/styles/*"],
      "@assets/*": ["./src/assets/*"],
      "@resources/*": ["./src/resources/*"],
      "@domain/*": ["./src/domain/*"],
      "@context/*": ["./src/context/*"]
    }
  }
}
